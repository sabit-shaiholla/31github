<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>
    <%=movie_info[0].title%>
  </title>
  <link rel="shortcut icon" type="image/png" href="/static/favicon.png">
  <link rel="stylesheet" href="../CSS/styles.pure.css" />
  <link rel="stylesheet" href="../CSS/movie_info.css" />
  <link rel="stylesheet" href="../CSS/slick.css" />
  <link rel="stylesheet" href="../CSS/navbar.css">
</head>

<body>

  <div class="nav-wrapper">
    <img src="/static/holoskull.gif" style="width:70px; position:absolute; top:10px; left:10px;">
    <div class="nav">
      <ul class="nav-menu" id="nav-menu">
        <li style="text-align: center;">Inspired by <a href="https://twitter.com/karpathy/status/1647372603907280896"
            target=”_blank”>@karpathy</a></li>
        <li style="text-align: center;">Powered by <a href="https://github.com/weaviate">
            <img src="/static/weaviate-icon.png" alt="Weaviate"
              style="height: 30px;width: 30px; vertical-align:middle;"></a></li>
        <li style="text-align: center;"><a href="https://github.com/weaviate-tutorials/awesome-moviate">
            <img src="/static/github-icon.png" alt="Github"
              style="height: 30px;width: 30px; vertical-align:middle;"></a></li>
      </ul>
    </div>
    <img src="/static/holoskull.gif" style="width:70px; position:absolute; top:10px; right:10px;">
  </div>


  <center>
    <div class="logo">
        <img src="/static/flame.gif">
        <h1>
          <%=movie_info[0].title%>
        </h1>
        <img src="/static/flame.gif">
      </div>
    </div>
  </center>

  <!-- Movie Description Starts -->
  <section id="home" class="iq-main-slider p-0">
    <div class="cards-wrapper">


      <div id="home-slider" class="slider m-0 p-0">
        <div class="container-fluid position-relative h-100">
          <div class="slider-inner h-100">
            <div class="row align-items-center h--100">
              <div class="d-flex align-items-center r-mb-23 mt-4" data-animation-in="fadeInUp" data-delay-in="1.2">

                <a href="/" class="btn btn-hover iq-button">Go back</a>
              </div>
              <p data-animation-in="fadeInUp">
                <%=movie_info[0].description%>
              </p>


              <div class="movie-info-row">
              <div class="movie-info-col-image image-container">
                <img src="<%=movie_info[0].poster_link%>" style="height:200px; margin-left:-15px;" />
              </div>

              <div class="movie-info-col-text">
                <div class="trending-list" data-animation-in="fadeInUp" data-delay-in="1.2">
                  <div class="text-primary title starring">
                    Director:
                    <span class="text-body" style="text-transform:capitalize;">
                      <%=movie_info[0].director%>
                    </span>
                  </div>
                  <div class="text-primary title starring">
                    Starring:
                    <span class="text-body" style="text-transform:capitalize;">
                      <%=movie_info[0].actors%>
                    </span>
                  </div>
                  <div class="text-primary title genres">
                    Genres: <span class="text-body" style="text-transform:capitalize;">
                      <%=movie_info[0].genres%>
                    </span>
                  </div>
                  <div class="text-primary title genres">
                    Keywords: <span class="text-body" style="text-transform:capitalize;">
                      <%=movie_info[0].keywords%>
                    </span>
                  </div>
                </div>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </section>

  <!-- Movie Description Ends -->

  <!-- Recommended Movie Section Start -->
  <div class="section-header">
    Similar movies
  </div>

  <section class="popular-tours">
    <div class="cards-wrapper">
      <!-- MOVIE ITEM -->
      <% for (let i=1;i<related_movies.length; i++) { %>
        <div class="card">
          <div class="movie-item">
            <form action=<%="/movie/" +related_movies[i].movie_id %>
              method="get"
              >
              <button type="submit">
                <img src="<%=related_movies[i].poster_link%>" alt="">
                <div class="movie-item-content">
                  <div class="movie-item-title" style="text-transform:capitalize;">
                    <%=related_movies[i].title %>
                  </div>
                  <div class="movie-infos">
                    <div class="movie-info">
                      <span>
                        <%=related_movies[i].year%>
                      </span>
                    </div>
                    <div class="movie-info">
                      <span>
                        <%=related_movies[i].genres%>
                      </span>
                    </div>
                  </div>
                </div>
              </button>
            </form>
          </div>
        </div>
        <% } %>
    </div>
    <!-- Recommended Movie Section End -->

</body>
<script src="../js/jquery-3.4.1.min.js"></script>
<script src="../js/slick.min.js"></script>
<script src="../js/main.js" type="text/javascript"></script>

</html>